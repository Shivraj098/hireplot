generator client {
  provider = "prisma-client-js"
  
}

datasource db {
  provider = "postgresql"
  
}


enum JobStatus {
  SAVED
  APPLIED
  INTERVIEW
  OFFER
  REJECTED
}
enum VersionType {
  BASE
  TAILORED
}

model User {
  id             String            @id @default(uuid())
  name           String?
  email          String            @unique
  password       String?
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt

  resumes        Resume[]
  resumeVersions ResumeVersion[]
  jobs           Job[]
  applications   JobApplication[]
  sessions Session[]
  accounts Account[]

}

model Resume {
  id        String   @id @default(uuid())
  userId    String
  title     String

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  versions  ResumeVersion[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model ResumeVersion {
  id           String   @id @default(uuid())
  resumeId     String
  userId       String
  jobId        String?
  content      Json

  versionType  VersionType @default(BASE)
  parentId     String?

  createdAt    DateTime @default(now())

  resume       Resume   @relation(fields: [resumeId], references: [id], onDelete: Cascade)
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  job          Job?     @relation(fields: [jobId], references: [id])
  parent       ResumeVersion? @relation("VersionBranch", fields: [parentId], references: [id])
  children     ResumeVersion[] @relation("VersionBranch")
  applications JobApplication[]
  aTSResults   ATSResult[]
  suggestions  AISuggestion[]
}

model Job {
  id           String            @id @default(uuid())
  userId       String
  title        String
  company      String
  location     String?
  jobLink      String?
  description  String
  createdAt    DateTime          @default(now())
  updatedAt    DateTime          @updatedAt
  status       JobStatus         @default(SAVED)
  notes        String?

  user         User              @relation(fields: [userId], references: [id])
  applications JobApplication[]
  versions     ResumeVersion[]
  skillGaps    SkillGap[]
  interviewPreps InterviewPrep[]
}

model JobApplication {
  id           String      @id @default(uuid())
  userId       String
  jobId        String
  resumeVersionId String
  status       JobStatus   @default(SAVED)
  notes        String?
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  user         User        @relation(fields: [userId], references: [id])
  job          Job         @relation(fields: [jobId], references: [id])
  resumeVersion ResumeVersion @relation(fields: [resumeVersionId], references: [id])
}

model ATSResult {
  id               String   @id @default(uuid())
  resumeVersionId  String   @unique
  score            Int
  matchedKeywords  Json
  missingKeywords  Json
  weakKeywords     Json
  createdAt        DateTime @default(now())

  resumeVersion    ResumeVersion @relation(fields: [resumeVersionId], references: [id])
}

model AISuggestion {
  id              String        @id @default(uuid())
  resumeVersionId String
  section         String
  originalContent Json
  suggestedContent Json
  applied         Boolean       @default(false)
  createdAt       DateTime      @default(now())

  resumeVersion   ResumeVersion @relation(fields: [resumeVersionId], references: [id])
}

model SkillGap {
  id          String     @id @default(uuid())
  jobId       String
  skill       String
  priority    String
  estimatedTime String
  reasoning   String
  createdAt   DateTime   @default(now())

  job         Job        @relation(fields: [jobId], references: [id])
}

model InterviewPrep {
  id            String     @id @default(uuid())
  jobId         String
  questions     Json
  type          String
  starDrafts    Json
  technicalTopics Json
  createdAt     DateTime   @default(now())

  job           Job        @relation(fields: [jobId], references: [id])
  

}


model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
